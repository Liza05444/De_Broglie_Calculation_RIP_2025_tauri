{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "de-broglie-project",
  "version": "0.1.0",
  "identifier": "com.debroglie.project",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "https://192.168.1.20:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "de-broglie-project",
        "width": 800,
        "height": 600,
        "resizable": true
      }
    ]
  },
  "plugins": {
    "http": {
      "enabled": true
    }
  },
  "bundle": {
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png"
    ]
  }
}
